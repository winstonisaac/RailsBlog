<%= form_with model: [@story, @comment], local: true do |form| %>
  <div>
    <%= form.label :content %><br>
    <%= form.text_field :content %>
    <% @comment.errors.full_messages_for(:content).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>